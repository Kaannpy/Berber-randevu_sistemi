<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anatolian Kaan Berber</title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KuaforRandevuSistemi.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Anatolian Kaan Berber
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i> Hakkımızda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Staffs" asp-action="Index">
                                <i class="fas fa-user-tie me-1"></i> Personeller
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                                <i class="fas fa-calendar-check me-1"></i> Randevularım
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">
                                <i class="fas fa-list-alt me-1"></i> Fiyat Listesi
                            </a>
                        </li>
                    </ul>

                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="barber-pole-divider"></div>

    <footer class="footer text-white py-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <p class="mb-0"><strong>İletişim:</strong> 05535865770</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="mb-0"><strong>Çalışma Saatleri:</strong> Pazar hariç 10:00-22:00</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <p class="mb-0"><strong>Takip Edin:</strong>
                        <a href="https://www.instagram.com/kaan.pey/" class="text-white ms-2" target="_blank">
                            <i class="fab fa-instagram"></i> Bizi instagramdan takip edebilirsiniz
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
